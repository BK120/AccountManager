<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:orientation="vertical"
   	android:background="#F4F4F4"
    tools:context="com.example.activity.AddAccountActivity" >
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/back1"
            android:clickable="true"
            android:id="@+id/AddAccountActivity_back_iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="添加资金账户"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/AddAccountActivity_back_iv"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:hint="请输入账户名称:"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:id="@+id/AddAccountActivity_des_et"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        />
    <EditText
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:hint="请输入账户余额:"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:id="@+id/AddAccountActivity_money_et"
        android:layout_marginTop="15dp"
        android:inputType="numberDecimal"
        android:layout_marginLeft="5dp"
        />
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:background="#ffffff"
        android:id="@+id/AddAccountActivity_type_rl"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="账户类型"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="现金"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:layout_alignParentRight="true"
            android:id="@+id/AddAccountActivity_rl_type_tv"
            />
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ft_cash1"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:layout_alignParentRight="true"
            android:id="@+id/AddAccountActivity_rl_type_iv"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:background="#ffffff"
        android:id="@+id/AddAccountActivity_color_rl"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:hint="选择背景颜色"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_height="15dp"
            android:layout_width="15dp"
            android:background="#FE8A65"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:layout_alignParentRight="true"
            android:id="@+id/AddAccountActivity_rl_color_iv"
            />
    </RelativeLayout>
    <Button
        android:layout_height="40dp"
        android:layout_width="250dp"
        android:text="保存"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="#00D6BB"
        android:id="@+id/AddAccountActivity_save_btn"
        />
</LinearLayout>