<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F4F4F4"
    tools:context="com.example.activity.UserInfoActivity" >
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        >
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/back1"
            android:clickable="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="8dp"
			android:id="@+id/userInfoActivity_back_iv"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="个人中心"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        >
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="我的头像"
           android:textSize="18sp"
           android:layout_marginLeft="20dp"
           android:layout_centerVertical="true"
           /> 
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/login_mine_pic"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:clickable="true"
        android:id="@+id/userInfoActivity_update_username_rl"
        >
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="昵称"
           android:textSize="18sp"
           android:layout_marginLeft="20dp"
           android:layout_centerVertical="true"
           />
       <TextView
           android:id="@+id/userInfoActivity_showusername_tv"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text=""
           android:textSize="18sp"
           android:layout_marginRight="20dp"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           /> 
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:clickable="true"
        android:id="@+id/userInfoActivity_update_password_rl"
        >
       <TextView
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="修改密码"
           android:textSize="18sp"
           android:layout_marginLeft="20dp"
           android:layout_centerVertical="true"
           />
       <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_down"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/userInFoActivity_tuichudenglu_btn"
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:text="退出登录"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>